{
    "manifest_version":3,
    "name":"My Reactjs Bo",
    "description":"My Reactjs Bolierplate",
    "version":"1.0.0",
    "action": {
        "default_popup": "popup.html",
        "default_title": "React Boilerplate",
        "default_icon": "icon.png"
    },
    "background":{
        "service_worker":"background.js"
    },
    "permissions": [
        "notifications",
        "storage",
        "alarms",
        "tabs",
        "scripting",
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts":[
        {
          "matches":["https://*.google.com.tw/*"],
          "js":["contentScript.js"]
        }
    ],
    "options_page": "options.html",
    "icons":{
        "16":"icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}